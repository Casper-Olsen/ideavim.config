" Leader
nnoremap <SPACE> <Nop>
let mapleader = " "

" Global
set incsearch
set ignorecase
set smartcase
set hlsearch
set scrolloff=5
set clipboard+=unnamedplus

" Plugins
Plug 'machakann/vim-highlightedyank'
set which-key
set notimeout

" Remaps
" :actionlist
nnoremap <Leader>gI :action GotoImplementation<CR>
nnoremap <Leader>gd :action GotoDeclaration<CR>
nnoremap <Leader>gr :action FindUsages<CR>
nnoremap <Leader>sf :action SearchEverywhere<CR>
